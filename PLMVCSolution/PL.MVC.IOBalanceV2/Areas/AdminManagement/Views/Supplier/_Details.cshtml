@model PL.Business.Dto.IOBalanceV2.SupplierDto

<div class="form-group">
    @Html.HiddenFor(m => m.SupplierId, new { @id = "hdfSupplierId" })
    <label for="" class="control-label col-sm-3 required">Supplier Code</label>
    <div class="control-input col-sm-8">
        @Html.TextBoxFor(m => m.SupplierCode,
        new
        {
            @class = "form-control",
            @id = "SupplierCode"
        })
        @Html.ValidationMessageFor(m => m.SupplierCode, "", new { @class = "error" })
    </div>
</div>
<div class="form-group">
    <label for="" class="control-label col-sm-3">Supplier Name</label>
    <div class="control-input col-sm-8">
        @Html.TextBoxFor(m => m.SupplierName,
        new
        {
            @class = "form-control",
            @id = "SupplierName"
        })
        @Html.ValidationMessageFor(m => m.SupplierName, "", new { @class = "error" })
    </div>
</div>
